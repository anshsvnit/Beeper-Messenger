<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_heading" parent="AppTheme">
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colortext</item>
    </style>

    <style name="btn_heading" parent="AppTheme">
        <item name="android:textSize">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <!--<item name="android:background">@drawable/d_btn_header_bg</item>
        <item name="android:textColor">@drawable/d_btn_font_bg</item>
        -->
        <item name="android:background">#034372</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_view_drlist">
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view_profile">
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
