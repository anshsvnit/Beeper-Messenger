<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_header_user"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/doctor_image_4" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/text_heading"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Welcome"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
                   <!-- <ImageView
                        style="@style/text_heading"
                        android:layout_gravity="right|center_vertical"
                        android:padding="5dp"
                        android:src="@android:drawable/ic_lock_lock"
                        />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/btn_heading"
                        android:layout_weight="1"
                        android:button="@null"

                         android:id="@+id/tv_header_home"
                        android:text="Home" />

                    <TextView
                        style="@style/btn_heading"
                        android:layout_weight="1"
                        android:id="@+id/tv_header_invite"
                        android:button="@null"
                        android:drawablePadding="0dp"

                        android:text="Invite" />

                    <TextView
                        style="@style/btn_heading"
                        android:layout_weight="1"
                        android:id="@+id/tv_header_chat"
                        android:button="@null"

                        android:text="Chats" />

                    <TextView
                        style="@style/btn_heading"
                        android:layout_weight="1"
                        android:button="@null"
                        android:id="@+id/tv_header_wall"
                        android:drawableLeft="@mipmap/star"
                        android:drawablePadding="1dp"
                        android:text="Walls" />

                    <TextView
                        style="@style/btn_heading"
                        android:layout_weight="1"
                        android:button="@null"
                        android:id="@+id/tv_header_profile"
                        android:text="Profile" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.Toolbar>


</LinearLayout>
