<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="255dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/user_profile_image" />

                <TextView
                    android:id="@+id/title_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:minHeight="?attr/actionBarSize"
                    android:text="Test User"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </FrameLayout>
            <TextView
                android:id="@+id/txt_edit_profile_activity"
                style="@style/text_view_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:minHeight="?attr/actionBarSize"
                android:padding="20dp"
                android:text="Activity"
                android:textColor="#2E64FE"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FAFAFA"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_mail_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/email" />

                    <TextView
                        android:id="@+id/txt_email_profile"
                        style="@style/text_view_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:minHeight="?attr/actionBarSize"
                        android:padding="20dp"
                        android:text="xyz1001@gmail.com"
                        android:textSize="15dp" />


                    <ImageView
                        android:id="@+id/img_email_available_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/avileble_icon" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/separator_line_3" />


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_contact_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/phone" />

                    <TextView
                        android:id="@+id/txt_contact_profile"
                        style="@style/text_view_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"

                        android:minHeight="?attr/actionBarSize"
                        android:padding="20dp"
                        android:text="+91-0123456789"
                        android:textSize="15dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/separator_line_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_gender_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/gender" />

                    <TextView
                        android:id="@+id/txt_gender_profile"
                        style="@style/text_view_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:minHeight="?attr/actionBarSize"
                        android:padding="20dp"
                        android:text="Male"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:background="@mipmap/separator_line_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/flag"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/imageView_flag_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/flag"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/flag_line" />


                    <TextView
                        android:id="@+id/txt_state_profile"
                        style="@style/text_view_profile"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"

                        android:minHeight="?attr/actionBarSize"
                        android:paddingLeft="10dp"
                        android:paddingTop="20dp"
                        android:text="Madhya Pradesh"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/separator_line_3" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_dob_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/calander" />

                    <TextView
                        android:id="@+id/txt_dob_profile"
                        style="@style/text_view_profile"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:minHeight="?attr/actionBarSize"
                        android:padding="20dp"
                        android:text="02/02/1991"
                        android:textSize="@dimen/textSize_15dp" />


                    <ImageView
                        android:id="@+id/img_dob_dropdown_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/drop_down_icon"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_change_password_profile"
                        style="@style/text_view_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:minHeight="?attr/actionBarSize"
                        android:padding="20dp"
                        android:text="Change Password"
                        android:textColor="#2E64FE"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txt_edit_profile"
                        style="@style/text_view_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:minHeight="?attr/actionBarSize"
                        android:padding="20dp"
                        android:text="Edit Profile"
                        android:textColor="#2E64FE"
                        android:textSize="18dp" />

                </LinearLayout>
                <Button
                    android:id="@+id/btn_edit_profole_logout"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_button"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>

